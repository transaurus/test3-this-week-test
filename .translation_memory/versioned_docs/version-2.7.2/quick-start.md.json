      "segment_id": "f422383e",
      "source_content": "## Quick installation",
      "source_content_hash": "ca4312ff790afaec31a0fe346bb31ce20071c32ef902492b3242f4595b0f8f16",
      "node_type": "heading",
      "translatable": true,
      "translations": {
